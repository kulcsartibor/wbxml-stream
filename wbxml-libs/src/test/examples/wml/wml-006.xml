<?xml version="1.0"?>
<!DOCTYPE wml PUBLIC
    "-//WAPFORUM//DTD WML 1.3//EN"
    "http://www.wapforum.org/DTD/wml13.dtd">

<wml>
    <card title="Login">
        <p>Username:
            <input name="user" format="*x"/></p>
        <p>Password:
            <input name="pass" type="password"/></p>
        <do type="accept" title="Log In">
            <go href="login?u=$(user:escape)&amp;p=$(pass:escape)"/>
        </do>
    </card>
</wml>
